// Normalize
@import "_normalize.styl";

$main-color = #555
$sub-color = #fff

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed, 
figure, figcaption, footer, header, hgroup, 
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
    color: $main-color;
	vertical-align: baseline;
    outline: none;
    text-decoration: none;
}

body {
    text-rendering: optimizeLegibility;
    word-wrap: break-word;
    font-family: "Hiragino Sans GB","Microsoft JhengHei","WenQuanYi Micro Hei",tahoma,arial,simsun;
    padding: 100px 0;
    background-position: center center;
    background-color: #232323;
    color: $main-color;
}

pre {
    padding: 5px;
    font-size: 13.3px;
    font-family: Consolas, Monaco, Menlo, Consolas, monospace;
}

#container {
        width: 900px;
        margin: 0 auto;
        background: #fff;
}

.hdimg {
    padding: 140px 20px;
    background-image: url(/image/hdimg.jpg);
	background-position: center center;

    h1 {
        margin-bottom: 15px;
        font-size: 32px;
        font-weight: normal;
        letter-spacing: 4px;
        line-height: 42px;
        text-align: center;
        color: white;
        }

    p {
        padding: 20px 50px 0;
        text-align: center;
        color: white;
        }
}

#main-nav {
    font-size: 14px;
    text-align: center;
    padding: 15px 0;
    border-bottom: 1px solid #f2f2f2;
    a {
        white-space: nowrap;
        display: inline-block;
        margin: 0 10px;
        }
    a:hover {
        opacity: 0.6;
        }
}

#main-nav, #content, #footer{
    width: 700px;
    margin: 0 auto;
}

/*article*/
.article-content {
    line-height: 1.45em;
    .highlight {
        line-height: 1.2em;
        width: 100%;
        margin: 1em 0;
        overflow-x: auto;
        position: relative;
        table {
            margin: 0;
            padding: 0;
            width: 100%;
            border-collapse: collapse;
            background-color: #f6f8fa;
        }
        .gutter pre {
            width: 12px;
            color: #cacaca;
        }
        pre {
            margin-top: 0;
            margin-bottom: 0; 
            background-color: #f6f8fa;
        }
    }
}

