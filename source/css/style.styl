// Normalize
@import "_normalize.styl";


$main-color = #555
$sub-color = #fff

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed, 
figure, figcaption, footer, header, hgroup, 
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
    color: $main-color;
	vertical-align: baseline;
    outline: none;
    text-decoration: none;
}

body {
    text-rendering: optimizeLegibility;
    word-wrap: break-word;
    font-family: "Lato","Hiragino Sans GB","Microsoft JhengHei","WenQuanYi Micro Hei",tahoma,arial,simsun;
    padding: 100px 0;
    background-position: center center;
    background-color: #232323;
    color: $main-color;
}

pre {
    padding: 5px;
    font-size: 13.3px;
    font-family: Consolas, Monaco, Menlo, Consolas, monospace;
}

#container {
        width: 900px;
        margin: 0 auto;
        background: #fff;
}

.hdimg {
    padding: 140px 20px;
    background-image: url(/image/hdimg.jpg);
	background-position: center center;

    h1 {
        margin-bottom: 15px;
        font-size: 40px;
        font-weight: normal;
        letter-spacing: 4px;
        line-height: 42px;
        text-align: center;
        color: white;
        }

    p {
        padding: 20px 50px 0;
        text-align: center;
        color: white;
        }
}

#main-nav {
    font-size: 16px;
    text-align: center;
    padding: 15px 0;
    border-bottom: 1px solid #f2f2f2;
    a {
        white-space: nowrap;
        display: inline-block;
        margin: 0 10px;
        }
    a:hover {
        opacity: 0.6;
        }
}

#main-nav, #content, #footer{
    width: 700px;
    margin: 0 auto;
}

/*article*/
article {
    margin: 30px 0
}

.article+.article {
    border-top: 1px solid #f2f2f2;
    padding-top: 30px;
}

.article-title {
    text-align: center;
    font-weight: 400;
    font-size: 0.9em;
    margin: 0;
    h1 {
        font-weight: 550;
        margin: 0;
    }
}

.article-meta {
    text-align: center;
    margin: 5px 0 15px 0;
    font-size: 14px;
    opacity: 0.6;
}

.article-more-link {
    margin-top: 20px;
    font-size: 14px;
    text-align: center;
}

.more-link-button {
    padding: 5px;
    border-bottom: 1px solid #666;
    transition: all .3s;
    -moz-transition: all .3s; /* Firefox 4 */
    -webkit-transition: all .3s; /* Safari and Chrome */
    -o-transition: all .3s; /* Opera */
}
.more-link-button:hover{
    color: #fff;
    background-color: #666
}

.article-content {
    line-height: 1.45em;
}




/*footer*/
#footer {
    border-top: 1px solid #f2f2f2;
    font-size: 16px;
    line-height: 1.45em;
    text-align: center;
    padding: 15px 0;
}



@import "_variables.styl";
@import "_highlight.styl";
